override_dh_auto_clean:
#	if [ -e contrib/perl/Build ]; then cd contrib/perl && \
#		./Build clean; fi
#	rm -rf contrib/perl/Build contrib/perl/_build
#	rm -f /contrib/perl/MYMETA*
